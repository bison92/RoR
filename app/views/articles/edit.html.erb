<h1>Editing Article</h1>

<%= form_for :article, url: article_path(@article), method: :patch, html: { class: "form-horizontal" } do |f| %>
	<% if @article.errors.any? %>
	    <div id="error_explanation" class="alert alert-danger" role="alert">
	      <h2>
	        <%= pluralize(@article.errors.count, "error") %> prohibited
	        this article from being saved:
	      </h2>
	      <ul>
	        <% @article.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
  	<% end %>
  	<div class="form-group">
		<%= f.label :title, :class => "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :title, :class => "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :text, :class => "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :text , :class => "form-control" %>
		</div>
	</div>

	<div class="form-group">
    	<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit 'Edit article', :class => "btn btn-success" %>
		</div>
	</div>
<% end %>
<%= link_to 'Back', articles_path, { class: "btn btn-default" } %>