<h1><%= @article.title %></h1>
<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @article.title %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Text</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @article.text %></p>
    </div>
  </div>
</form>
<%= link_to 'Edit', edit_article_path(@article), { class: "btn btn-warning" } %>
<%= link_to 'Back', articles_path, { class: "btn btn-default" } %>